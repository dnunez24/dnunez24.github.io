{
  "source": "./src",
  "destination": "./build",
  "metadata": {
    "title": "David Nuñez",
    "description": "David Nuñez | Technology, Leadership, Strategy"
  },
  "plugins": [
    {
      "metalsmith-drafts": true
    },
    {
      "metalsmith-metallic": true
    },
    {
      "metalsmith-markdown": {
        "smartypants": true,
      	"gfm": true,
      	"tables": true
      }
    },
    {
      "metalsmith-layouts": {
        "engine": "hogan",
        "directory": "layouts",
        "partials": "partials"
      }
    },
    {
      "metalsmith-collections": {
        "posts": {
          "pattern": "posts/**.html",
          "sortBy": "published",
          "reverse": true
        }
      }
    },
    {
      "metalsmith-permalinks": {
        "linksets": [
          {
            "match": {
              "collection": "posts"
            },
            "pattern": "blog/:title"
          }
        ],
        "relative": false
      }
    },
    {
      "metalsmith-imagemin": {
        "input": "src/assets/images/*.{jpeg,jpg,png,gif,svg}",
        "output": "build/assets/images",
        "gifsicle": {},
        "mozjpeg": {
          "progressive": true,
          "quality": 70
        },
        "pngquant": {
          "quality": "65-80"
        },
        "svgo": {}
      }
    },
    {
      "metalsmith-sass": {
        "outputStyle": "compressed",
        "outputDir": "assets/css",
        "sourceMap": true,
        "sourceMapContents": true
      }
    },
    {
      "metalsmith-autoprefixer": {}
    },
    {
      "metalsmith-uglify": {
        "concat": "assets/js"
      }
    },
    {
      "metalsmith-html-minifier": "*.html"
    },
    {
      "metalsmith-browser-sync": {
        "server": "build",
        "files": [
          "metalsmith.json",
          "src/**/*.md",
          "layouts/**/*.mustache",
          "partials/**/*.mustache",
          "src/assets/scss/**/*.scss",
          "src/assets/js/**/*.js"
        ],
        "reloadDelay": 2000
      }
    },
    {
      "metalsmith-lunr": {
        "ref": "title",
        "fields": {
          "title": 2,
          "description": 10,
          "category": 5,
          "tags": 3,
          "contents": 1
        },
        "pipelineFunctions": [
          "lunr_.trimmer",
          "lunr_.no.stopWordFilter",
          "lunr_.no.stemmer"
        ],
        "indexPath": "search/index.js"
      }
    },
    {
      "metalsmith-mapsite": {
        "hostname": "http://dnunez24.github.io",
        "changefreq": "weekly",
        "omitIndex": true
      }
    }
  ]
}
